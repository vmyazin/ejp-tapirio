extends layout

block content  
  .container
    include partials/_sec-nav

  #episode-details.container
    .row
      .col-sm-12.mt-2
        h3
          span.small-caps.date= episode.pubDateConverted
        h2 №#{episode.episodeNum} #{episode.title}
        h4= episode['itunes:subtitle']
        
        .player.my-3
          .btn-play Play
        p.mb-4
          a(href=episode.enclosure.$.url download=episode.enclosure.$.url )
            span.mask-link-style
              img(src='/images/icon-download.svg' alt='Download')
              |  
            | Скачать MP3 файл
        section.episode-desc
          div !{episode.description}

        include partials/_episode-nav

  .mb-5

  script.
    window.currentEpisode = !{JSON.stringify(episode)}

  include partials/header

  include partials/footer

  include partials/_player
